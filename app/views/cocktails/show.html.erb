<div>
<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% @cocktail.doses.each do |d| %>
    <p class="d-inline btn btn-success"><%= d.ingredient.name %></p>
    <p class="d-inline btn btn-primary"><%= d.description %></p>
    <p><%= link_to 'Delete', dose_path(d), method: :delete %></p>
  <% end %>
  <p class="btn btn-success"><%= link_to 'Add cocktail ingredients', new_cocktail_dose_path(@cocktail) %></p>
  <h2><%= link_to 'Back to Cocktail List', root_path %></h2>
</div>

  